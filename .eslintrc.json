{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": [2, "always"],
        "quotes": [2, "double"],
        "comma-dangle": 0,
        "dot-notation": 0,
        "indent": 0,
        "curly": 0
    },
    "root": true
}
